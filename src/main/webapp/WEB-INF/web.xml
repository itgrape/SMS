    </servlet-mapping>
    <servlet>
        <servlet-name>findStudentServlet</servlet-name>
        <servlet-class>com.pushihao.servlet.student.FindStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>findStudentServlet</servlet-name>
        <url-pattern>/servlet/find-student-servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addTeacherServlet</servlet-name>
        <servlet-class>com.pushihao.servlet.systemManager.AddTeacherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addTeacherServlet</servlet-name>
        <url-pattern>/servlet/add-teacher-servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addStudentServlet</servlet-name>
        <servlet-class>com.pushihao.servlet.teacher.AddStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addStudentServlet</servlet-name>
        <url-pattern>/servlet/add-student-servlet</url-pattern>
    </servlet-mapping>

</web-app>